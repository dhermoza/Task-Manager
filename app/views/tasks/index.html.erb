<h1>My tasks</h1>
<ul class="list-unstyled">
<% @tasks.each do |t| %>
<div class="pt-2">
<li class="pt-2">
<% if t.completed %>
<i class="fas fa-check-square"></i>
<% else %>
<i class="far fa-square"></i>
<% end %>
<%= link_to t.title, task_path(t)%> |
  <%= link_to ('<i class="fas fa-trash"></i>').html_safe,
            task_path(t),
            method: :delete,
            data: { confirm: "Are you sure?" } %><br>
</li>
</div>
<% end %>
</ul>

<%= link_to "Add a new task", new_path %>
